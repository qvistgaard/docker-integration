<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="hyperion-plugin"
					  xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
					  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" partial="true">

	<requiredProperties>
		<requiredProperty key="ContainerName">
			<defaultValue>Example</defaultValue>
		</requiredProperty>
	</requiredProperties>

	<fileSets>
		<fileSet filtered="true" packaged="false" encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>**/*.java</include>
				<include>**/*.properties</include>
				<include>**/*.factories</include>
				<include>pom.xml</include>
			</includes>
		</fileSet>

	</fileSets>



</archetype-descriptor>